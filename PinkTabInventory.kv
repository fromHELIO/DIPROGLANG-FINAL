#ASSETS

<CustomLabel>:
    size_hint: .1, .1
    font_size: 20
    bold: True
    pos_hint: {"center_y": 0.5, "center_x": 0.5}
    color: "#8a2038"
    font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"

<RoundedButton>:
    background_color: 0, 0, 0, 0
    background_normal: ""
    font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"
    canvas.before:
        Color:
            rgba: (156/255, 34/255, 69/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<LessRoundedButton@Button>:
    background_color: 0, 0, 0, 0
    background_normal: ""
    font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"
    canvas.before:
        Color:
            rgba: (156/255, 34/255, 69/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]
