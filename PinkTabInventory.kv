Navigator:
    LogInPage:
        id: loginpage
    HomePage:
        id: homepage
    AddRecord:
        id: addpage
    EditRecord:
        id: editpage
    DeleteRecord:
        id: deletepage
    ShowReport:
        id: reportpage


# SCREENS 

<LogInPage>:
    name: 'login'

    emp_id: emp_id
    password: password

    BoxLayout:
        orientation: "vertical"
        padding: 50, 50, 50, 200
        spacing: 20

        Image:
            source: "images/PinkTab_textLogo.png"
        
        Label:
            text: "Employee ID:"
            size_hint: .1, .1
            font_size: 20
            bold: True
            pos_hint: {"x": .05}
            color: "#8a2038"
            font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"
        
        TextInput:
            id: emp_id
            multiline: False
            padding: 10, 10
            size_hint: 1, .15
            font_size: 18
            background_color: "#ff519f"
            foreground_color: "#ffd6e5"
            font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"

        Label:
            text: "Password:"
            size_hint: .1, .1
            font_size: 20
            bold: True
            pos_hint: {"x": .05}
            color: "#8a2038"
            font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"
        
        TextInput:
            id: password
            password: True
            multiline: False
            padding: 10, 10
            size_hint: 1, .15
            font_size: 18
            background_color: "#ff519f"
            foreground_color: "#ffd6e5"
            font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF" 

        BoxLayout:
            orientation: "vertical"
            padding: 0, 30, 0, 0
            size_hint: .5, .3
            pos_hint: {"center_x": .5}
            RoundedButton:
                text: "Log In"
                color: "#fccce7"
                size_hint: (.5, .2)
                pos_hint: {"center_x": .5}
                font_size: 30
                on_press:
                    root.validateUser()

<HomePage>:
    name: 'home'

    AnchorLayout:
        GridLayout:
            cols: 1
            spacing: 20
            size_hint: None, None
            size: 400, 400

            BoxLayout:
                spacing: 20
                orientation: "horizontal"
                RoundedButton:
                    text: "Add Record"
                    font_size: 30
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'add'
                RoundedButton:
                    text: "Edit Record"
                    font_size: 28
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'edit'

            BoxLayout:
                spacing: 20
                orientation: "horizontal"
                RoundedButton:
                    text: "Delete Record"
                    font_size: 26
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'delete'
                RoundedButton:
                    text: "Show Report"
                    font_size: 28
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'show'

            BoxLayout:
                spacing: 20
                orientation: "horizontal"
                RoundedButton:
                    text: "Close"
                    font_size: 40
                    on_press:
                        root.endApp()

<AddRecord>:
