                    foreground_color: "#ffd6e5"
                    font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"
            
            #Submit and Back
            BoxLayout:
                size_hint: None, 1
                width: 200
                spacing: 20

                RoundedButton:
                    text: "Back"
                    color: "#fccce7"
                    size_hint: None, None
                    size: 170, 50
                    pos_hint: {"center_x": .5}
                    font_size: 30
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'home'

                RoundedButton:
                    text: "Submit"
                    color: "#fccce7"
                    size_hint: None, None
                    size: 170, 50
                    pos_hint: {"center_x": .5}
                    font_size: 30
                    on_press:
                        root.addNewInventory()

