                    size_hint: .1, .1
                    font_size: 20
                    bold: True
                    pos_hint: {"center_y": 0.5}
                    color: "#8a2038"
                    font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"

                TextInput:
                    id: quantity
                    pos_hint: {"center_x": .5}
                    multiline: False
                    padding: 10, 10
                    size_hint: None, None
                    size: 300, 50
                    pos_hint: {"center_y": 0.5}
                    font_size: 18
                    background_color: "#ff519f"
                    foreground_color: "#ffd6e5"
                    font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"
            
            #Expiration Date
            BoxLayout:
                orientation: "horizontal"
                spacing: 100
                Label:
                    text: "Expiration Date:"
                    size_hint: .1, .1
                    font_size: 20
                    bold: True
                    pos_hint: {"center_y": 0.5}
                    color: "#8a2038"
                    font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"

                TextInput:
                    id: exp_date
                    hint_text: "(YYYY-MM-DD)"
                    hint_text_color: "#e3b3c5"
                    pos_hint: {"center_x": .5}
                    multiline: False
                    padding: 10, 10
                    size_hint: None, None
                    size: 300, 50
                    pos_hint: {"center_y": 0.5}
                    font_size: 18
                    background_color: "#ff519f"
                    foreground_color: "#ffd6e5"
                    font_name: "C:\\WINDOWS\\FONTS\\BAHNSCHRIFT.TTF"
            
            #Price
            BoxLayout:
                orientation: "horizontal"
                spacing: 100
                Label:
